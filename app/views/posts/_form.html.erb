<%= form_for @post do |f| %>
  <div class="row">
    <%= f.text_field :title, class: "input-field col s12 m4" %>
    <%= f.text_area :content, class: 'materialize-textarea col s12 m11' %>
    <%= f.submit post.new_record? ? 'Creer' : 'Modifier', class: "waves-effect waves-light btn  col m2" %>
  </div>
<% end %>